@model IEnumerable<RapportFraStedet.Models.Form>

@{
    ViewBag.Title = "Forms";
}

<h2>Forms</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Id
        </th>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            SRS
        </th>
        <th>
            ResourceName
        </th>
        <th>
            ClassName
        </th>
        <th>
            Upload Physical Path
        </th>
        <th>
            Upload Virtual Path
        </th>
        <th>
            View Email To Receiver On Create
        </th>
        <th>
            View Email To Receiver On Edit
        </th>
