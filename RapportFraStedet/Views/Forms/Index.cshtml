        </td>
        <td>
            @item.FormId
        </td>
        <td>
            @item.Name
        </td>
        <td>
            @item.Email
        </td>
        <td>
            @item.SRS
        </td>
        <td>
            @item.ResourceName
        </td>
        <td>
            @item.ClassName
        </td>
        <td>
            @item.UploadPhysicalPath
        </td>
        <td>
            @item.UploadVirtualPath
        </td>
        <td>
            @item.ViewEmailToReceiverOnCreate
        </td>
        <td>
            @item.ViewEmailToReceiverOnEdit
        </td>
        <td>
            @item.ViewEmailToReceiverOnDelete
        </td>
        <td>
            @item.ViewEmailToSenderOnCreate
        </td>
        <td>
