@model RapportFraStedet.Models.GroupModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Group</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
                <div class="editor-label">
            @Html.LabelFor(model => model.Role)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Role, Model.Roles, "-- Vælg --")
            @Html.ValidationMessageFor(model => model.Role)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.SelectedForms)
        </div>
        <div class="editor-field">
            @Html.ListBoxFor(model => model.SelectedForms, Model.Forms)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.DefaultFormId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.DefaultFormId,Model.DefaultForms,"-- Vælg --")
            @Html.ValidationMessageFor(model => model.DefaultFormId)
        </div>

        @Html.HiddenFor(model=>model.GroupId)
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

