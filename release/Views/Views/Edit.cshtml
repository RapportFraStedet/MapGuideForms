@model RapportFraStedet.Models.View

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>View</legend>

        @Html.HiddenFor(model => model.ViewId)

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Name, ViewBag.Names as SelectList)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

            @Html.HiddenFor(model => model.GroupId)

        <div class="editor-label">
            @Html.LabelFor(model => model.ViewTypeId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.ViewTypeId, ViewBag.ViewTypes as SelectList)
            @Html.ValidationMessageFor(model => model.ViewTypeId)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { id = Model.GroupId })
</div>

